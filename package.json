{
    "name": "streampay-checkout-ecommerce-sdk",
    "version": "0.1.0",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev --parallel",
        "build:sdk": "turbo run build --filter=./packages/sdk",
        "test:sdk": "turbo run test --filter=./packages/sdk"
    },
    "devDependencies": {
        "prettier": "latest",
        "turbo": "latest"
    },
    "engines": {
        "node": ">=14.0.0"
    },
    "dependencies": {
        "@streampay/checkout-sdk": "^0.1.30",
        "@streampay/react-checkout-sdk": "^0.1.2",
    },
    "packageManager": "pnpm@7.12.2"
}
